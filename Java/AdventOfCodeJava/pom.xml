<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.jmitchell238.aoc</groupId>
  <artifactId>AdventOfCodeJava</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>AdventOfCodeJava</name>
  <description>Project for Advent Of Code solutions</description>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.2.0</version>
    <relativePath/>
  </parent>

  <properties>
    <maven.compiler.source>25</maven.compiler.source>
    <maven.compiler.target>25</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>25</java.version>
    <analytics-java.version>3.5.0</analytics-java.version>
    <error-handling-spring-boot-starter.version>4.2.0</error-handling-spring-boot-starter.version>
    <fmt.maven.plugin.version>2.21.1</fmt.maven.plugin.version>
    <httpcomponents.httpclient.version>4.5.14</httpcomponents.httpclient.version>
    <hypersistence-utils-hibernate-60.version>3.6.0</hypersistence-utils-hibernate-60.version>
    <liquibase-sessionlock.version>1.6.7</liquibase-sessionlock.version>
    <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>
    <lombok.version>1.18.42</lombok.version>
    <maven-compiler-plugin.version>3.14.1</maven-compiler-plugin.version>
    <org.mapstruct.version>1.6.3</org.mapstruct.version>
    <ramsey-logging-spring-boot-starter.version>3.1.3</ramsey-logging-spring-boot-starter.version>
    <ramsey-security-spring-boot-starter.version>3.1.2</ramsey-security-spring-boot-starter.version>
    <snakeyaml.version>2.2</snakeyaml.version>
    <sonar-maven-plugin.version>3.10.0.2594</sonar-maven-plugin.version>
    <spring-boot-admin-client.version>3.1.1</spring-boot-admin-client.version>
    <spring-security-test.version>6.1.5</spring-security-test.version>
    <springdoc-openapi-starter-webmvc-ui.version>2.2.0</springdoc-openapi-starter-webmvc-ui.version>
    <junit-jupiter.version>5.8.1</junit-jupiter.version>
  </properties>

  <dependencies>
    <!-- Spring Boot Dependencies -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>

    <!-- Spring Boot Test -->
    <dependency>
      <artifactId>spring-boot-starter-test</artifactId>
      <groupId>org.springframework.boot</groupId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <artifactId>spring-security-test</artifactId>
      <groupId>org.springframework.security</groupId>
      <scope>test</scope>
      <version>${spring-security-test.version}</version>
    </dependency>

    <!-- Lombok for annotations that generate code -->
    <dependency>
      <artifactId>lombok</artifactId>
      <groupId>org.projectlombok</groupId>
      <version>${lombok.version}</version>
      <scope>provided</scope>
    </dependency>

    <!-- JUnit Dependencies -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>${junit-jupiter.version}</version>
      <scope>test</scope>
    </dependency>

    <!-- SnakeYAML for YAML parsing -->
    <dependency>
      <artifactId>snakeyaml</artifactId>
      <groupId>org.yaml</groupId>
      <version>${snakeyaml.version}</version>
    </dependency>

    <!-- Mapstruct for mapping models -->
    <dependency>
      <artifactId>mapstruct</artifactId>
      <groupId>org.mapstruct</groupId>
      <version>${org.mapstruct.version}</version>
    </dependency>
    <dependency>
      <artifactId>mapstruct-processor</artifactId>
      <groupId>org.mapstruct</groupId>
      <version>${org.mapstruct.version}</version>
    </dependency>

    <!-- Fastutil for fast collections -->
    <dependency>
      <groupId>it.unimi.dsi</groupId>
      <artifactId>fastutil</artifactId>
      <version>8.5.6</version> <!-- Replace with the latest version -->
    </dependency>

    <dependency>
      <groupId>com.google.mug</groupId>
      <artifactId>mug</artifactId>
      <version>7.0</version>
    </dependency>

    <dependency>
      <groupId>com.google.mug</groupId>
      <artifactId>mug-protobuf</artifactId>
      <version>7.0</version>
    </dependency>

    <dependency>
      <groupId>com.google.mug</groupId>
      <artifactId>mug-guava</artifactId>
      <version>7.0</version>
    </dependency>

    <dependency>
      <groupId>net.sourceforge.htmlcleaner</groupId>
      <artifactId>htmlcleaner</artifactId>
      <version>2.26</version>
    </dependency>

  </dependencies>

  <build>
  <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <!-- Use release instead of source/target for consistent JDK APIs -->
          <release>${java.version}</release>
          <annotationProcessorPaths>
            <path>
              <artifactId>lombok</artifactId>
              <groupId>org.projectlombok</groupId>
              <version>${lombok.version}</version>
            </path>
            <path>
              <artifactId>lombok-mapstruct-binding</artifactId>
              <groupId>org.projectlombok</groupId>
              <version>${lombok-mapstruct-binding.version}</version>
            </path>
            <path>
              <artifactId>mapstruct-processor</artifactId>
              <groupId>org.mapstruct</groupId>
              <version>${org.mapstruct.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <groupId>org.springframework.boot</groupId>
        <configuration>
          <excludes>
            <exclude>
              <artifactId>lombok</artifactId>
              <groupId>org.projectlombok</groupId>
            </exclude>
          </excludes>
        </configuration>
      </plugin>
      <!-- Remove Spotless to avoid conflicts -->
      <!--
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <version>2.43.0</version>
        <configuration>
          <java>
            <eclipse>
              <version>4.31.0</version>
            </eclipse>
            <includes>
              <include>src/main/java/**/*.java</include>
              <include>src/test/java/**/*.java</include>
            </includes>
          </java>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      -->

      <!-- Add Maven Formatter Plugin (Eclipse JDT-based) -->
      <plugin>
        <groupId>net.revelc.code.formatter</groupId>
        <artifactId>formatter-maven-plugin</artifactId>
        <version>2.23.0</version>
        <configuration>
          <includes>
            <include>src/main/java/**/*.java</include>
            <include>src/test/java/**/*.java</include>
          </includes>
          <lineEnding>LF</lineEnding>
          <skipJs>true</skipJs>
          <skipCss>true</skipCss>
          <skipXml>true</skipXml>
          <configFile>${basedir}/.eclipse-java-formatter.xml</configFile>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- Add Maven Versions Plugin to update dependencies/properties to latest releases -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>versions-maven-plugin</artifactId>
        <version>2.16.2</version>
        <configuration>
          <!-- Update properties like spring versions, lombok, etc. -->
          <includeProperties>true</includeProperties>
          <processAllModules>true</processAllModules>
          <!-- Ignore snapshots; only pick stable releases -->
          <allowSnapshots>false</allowSnapshots>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
